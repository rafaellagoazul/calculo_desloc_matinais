# ui/theme.py
import customtkinter as ctk

TEMAS = {
    "Claro": {
        "appearance": "Light",   # ðŸ”¥ CORRIGIDO
        "bg": "#f5f5f5",
        "fg": "#000000",
        "btn_bg": "#e0e0e0",
        "btn_fg": "#000000",
        "log_bg": "#ffffff",
        "log_fg": "#000000",
        "status_fg": "#006400"
    },
    "Escuro": {
        "appearance": "Dark",    # ðŸ”¥ CORRIGIDO
        "bg": "#1e1e1e",
        "fg": "#ffffff",
        "btn_bg": "#2d2d2d",
        "btn_fg": "#ffffff",
        "log_bg": "#121212",
        "log_fg": "#dcdcdc",
        "status_fg": "#00ff99"
    }
}


def get_tema(nome="Escuro"):
    return TEMAS.get(nome, TEMAS["Escuro"])


def aplicar_tema(nome="Escuro"):
    tema = get_tema(nome)
    ctk.set_appearance_mode(tema["appearance"])
